<html>
  <head>
    <link rel="shortcut icon" href="/static/img/istyle.png" type="image/png" />
  </head>

  <body>
    <%- include('layout/header', {title: "Products"}); -%>
    <!--//app-header-->

    <div class="app-wrapper">
      <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
          <h1 class="app-page-title">Overview</h1>

          <!--//app-card-->

          <div class="row g-4 m-4">
            <div class="col-6 col-lg-3 rounded bg-success m-2">
              <div class="app-card app-card-stat shadow-sm h-100">
                <div class="app-card-body p-3 p-lg-4">
                  <h4 class="stats-type mb-1">Products</h4>
                  <div class="stats-figure"><%= products.length %></div>
                  <a href="/admin/products" class="stats-meta text-success">
                    see all
                    <i class="fa fa-arrow-right"></i>
                  </a>
                </div>
                <!--//app-card-body-->
              </div>
              <!--//app-card-->
            </div>
            <!--//col-->

            <div class="col-6 col-lg-3 bg-primary rounded m-2">
              <div class="app-card app-card-stat shadow-sm h-100">
                <div class="app-card-body p-3 p-lg-4">
                  <h4 class="stats-type mb-1">Categories</h4>
                  <div class="stats-figure"><%= categories.length %></div>
                  <a href="/admin/categories" class="stats-meta text-success">
                    see all
                    <i class="fa fa-arrow-right"></i>
                  </a>
                </div>
                <!--//app-card-body-->
              </div>
              <!--//app-card-->
            </div>

            <!--//col-->
          </div>
          <!--//row-->

          <div class="row g-4 mb-4">
            <div class="col-12 col-lg-6">
              <div class="app-card app-card-progress-list h-100 shadow-sm">
                <div class="app-card-header p-3">
                  <div class="row justify-content-between align-items-center">
                    <div class="col-auto">
                      <h4 class="app-card-title">Categories</h4>
                    </div>
                    <!--//col-->
                    <div class="col-auto">
                      <div class="card-header-action">
                        <a href="#">All categories</a>
                      </div>
                      <!--//card-header-actions-->
                    </div>
                    <!--//col-->
                  </div>
                  <!--//row-->
                </div>
                <!--//app-card-header-->
                <div class="app-card-body">
                  <% categories.slice(0,4).forEach(category => { %>
                  <div class="item p-3">
                    <div class="row align-items-center">
                      <div class="col">
                        <div class="title mb-1">
                          <%= category.category_name %>
                        </div>
                        <div class="progress">
                          <div
                            class="progress-bar bg-success"
                            role="progressbar"
                            style="width: 100%"
                            aria-valuenow="100"
                            aria-valuemin="0"
                            aria-valuemax="100"
                          ></div>
                        </div>
                      </div>
                      <!--//col-->
                      <div class="col-auto">
                        <svg
                          width="1em"
                          height="1em"
                          viewBox="0 0 16 16"
                          class="bi bi-chevron-right"
                          fill="currentColor"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path
                            fill-rule="evenodd"
                            d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"
                          />
                        </svg>
                      </div>
                      <!--//col-->
                    </div>
                    <!--//row-->
                    <a class="item-link-mask" href="#"></a>
                  </div>
                  <!--//item-->
                  <% }) %>
                </div>
                <!--//app-card-body-->
              </div>
              <!--//app-card-->
            </div>
            <!--//col-->
            <div class="col-12 col-lg-6">
              <div class="app-card app-card-stats-table h-100 shadow-sm">
                <div class="app-card-header p-3">
                  <div class="row justify-content-between align-items-center">
                    <div class="col-auto">
                      <h4 class="app-card-title">Latest products</h4>
                    </div>
                    <!--//col-->
                    <div class="col-auto">
                      <div class="card-header-action">
                        <a href="/admin/products">All Products</a>
                      </div>
                      <!--//card-header-actions-->
                    </div>
                    <!--//col-->
                  </div>
                  <!--//row-->
                </div>
                <!--//app-card-header-->
                <div class="app-card-body p-3 p-lg-4">
                  <div class="table-responsive">
                    <table class="table table-borderless mb-0">
                      <thead>
                        <tr>
                          <th class="meta">Name</th>
                          <th class="meta stat-cell">Price</th>
                          <th class="meta stat-cell">Brand</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% products.slice(0,6).forEach(product => { %>
                        <tr>
                          <td><a href="#"><%= product.title %></a></td>
                          <td class="stat-cell"><%= product.price %></td>
                          <td class="stat-cell"><%= product.brand %></td>
                        </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                  <!--//table-responsive-->
                </div>
                <!--//app-card-body-->
              </div>
              <!--//app-card-->
            </div>
            <!--//col-->
          </div>
          <!--//row-->

          <!--//row-->
        </div>
        <!--//container-fluid-->
      </div>
      <!--//app-content-->

      <%- include('layout/footer') -%>
    </div>
    <!--//app-wrapper-->
  </body>
</html>
