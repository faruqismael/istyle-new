<html>
  <head>
    <link rel="stylesheet" href="/static/css/settings.css" />
    <link rel="shortcut icon" href="/static/img/istyle.png" type="image/png" />
  </head>

  <body>
    <div class="row">
      <div class="col-2">
        <%- include('layout/header', {title: "Home"}); -%> <%-
        include('layout/modal'); -%>
      </div>

      <div class="container col-8 py-5 my-5">
        <div class="row">
          <%- message %>
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                <div class="active" id="">
                  <h6>Privacy Policy</h6>
                  <hr />
                  <form method="post" action="/create/privacy">
                    <div class="form-group">
                      <textarea
                        rows="10"
                        class="form-control"
                        id="privacy"
                        name="privacy"
                        placeholder="Enter privacy here "
                      >
                      <%= privacy.setting_value %> 
                      </textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/static/js/setting.js"></script>
  </body>
</html>
